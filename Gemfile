source 'https://rubygems.org'

# Gemspec defines dependencies required to run the gem. The rest of this file
# defines the dependencies required to develop, build, and test the gem.
gemspec

gem 'rspec', '~> 3.4'
gem 'rspec-its', '~> 1.0'
gem 'coveralls', '~> 0.8'

# Run all pre-commit hooks via Overcommit during CI runs
gem 'overcommit', '0.32.0'

# Pin tool versions (which are executed by Overcommit) for Travis builds
gem 'rubocop', '0.39.0'
gem 'travis', '~> 1.7'
